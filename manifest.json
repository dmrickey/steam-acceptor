{
  "manifest_version": 3,
  "name": "Steam Key Accepter",
  "short_name": "SKA",
  "description": "accept steam keys",
  "version": "0.0.1",
  "author": "claudekennilol",
  "content_scripts": [
    {
      "matches": [
        "https://store.steampowered.com/account/registerkey?*"
      ],
      "js": [
        "index.js"
      ]
    }
  ],
  "host_permissions": [
    "https://store.steampowered.com/account/registerkey?key=*"
  ],
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "click.js"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}
